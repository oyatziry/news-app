<body id="background-signup">
  <div class="signUp">
    <form action="/auth/signup" method="POST" class="sform">
      <h3 class="welcome-signup">Welcome, Let's get started</h3>
      <p class="welcome-signup-message">Please Sign Up</p>
      <div class="form-group">
        <label for="new-email"></label>
        <input type="email" class="form-control" id="new-email" name="email" aria-describedby="emailHelp" placeholder="Email address">
      </div>
      <div class="form-group">
        <label for="new-name"></label>
        <input type="text" class="form-control" id="new-name" name="name" aria-describedby="emailHelp" placeholder="Full Name">
      </div>
      <div class="form-group">
        <label for="new-password"></label>
        <input type="password" class="form-control" id="new-password" name="password" min="8" placeholder="Password">
      </div>
      <button type="submit" id="signup-button" class="btn btn-primary">Create Account</button>
    </form>
  </div>
</body>