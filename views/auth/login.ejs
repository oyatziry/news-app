<div class="login">
  <form action="/auth/login" method="POST" class="lform">
    <div class="form-group">
      <label for="auth-email">Email address</label>
      <input type="email" class="form-control" id="auth-email" name="email" aria-describedby="emailHelp">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="auth-password">Password</label>
      <input type="password" class="form-control" id="auth-password" name="password">
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
  </form>
</div>
