<div class="container">
    <h1>Profile Page</h1>
    <h2>Welcome to your Profile Page </h2>
    <p>---------------------------------------------------------------</p>
    <h3>Email: <%= user.email %> </h3>
    <p>---------------------------------------------------------------</p>
    <h3><%= user.name %> </h3>
    <p>---------------------------------------------------------------</p>
    <form method="POST" action="/profile/<%= user.id %>/?_method=DELETE">
        <button class="btn btn-danger" type="submit">Delete</button>
    </form>
    <form action="/profile/edit/<%=user.id%>/?_method=PUT" class="sform" method="GET">
        <input hidden type="text" name="title" value="<%= user.name %> ">
        <input hidden type="text" name="title" value="<%= user.email %> ">
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>